# ===========================================
# GenAI OIDC IdP - Environment Variables
# ===========================================

# ------------------------------------------
# IdP Server Configuration (main.ts)
# ------------------------------------------

# OpenAI API Key (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model (Optional - default: gpt-5-mini)
# Examples: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-5-mini

# Server port (default: 9052 for local, 8000 for Deno Deploy)
PORT=9052

# Issuer URL (Optional - auto-detected in Deno Deploy)
# For local development, set to http://localhost:9052
ISSUER=http://localhost:9052

# JWT Signing Secret (Required for production)
JWT_SECRET=your-super-secret-jwt-signing-key-change-in-production

# Additional redirect URIs for clients (comma-separated)
# Used to add Deno Deploy URLs to registered clients
# Example: https://your-client.deno.dev/callback,https://another.example.com/callback
ADDITIONAL_REDIRECT_URIS=

# Test Client URL (shown on IdP top page)
# Example: https://your-client.deno.dev
TEST_CLIENT_URL=

# ------------------------------------------
# Test Client Configuration (test-client.ts)
# ------------------------------------------

# IdP URL (Required for Deno Deploy)
# For local development, defaults to http://localhost:9052
IDP_URL=http://localhost:9052

# Client port (default: 3000)
# Use CLIENT_PORT to avoid conflict with IdP's PORT
CLIENT_PORT=3000

# Client credentials (Optional - defaults to test-client-1)
CLIENT_ID=test-client-1
CLIENT_SECRET=test-secret-1

# Redirect URI (Optional - auto-detected from request URL)
# REDIRECT_URI=http://localhost:3000/callback

# Session cookie signing secret (Optional)
SESSION_SECRET=your-session-secret-change-in-production
